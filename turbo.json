{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build:css": {
      "cache": true,
      "inputs": ["src/styles/**", "src/components/**/*.tsx"],
      "outputs": ["dist/styles.css"]
    },
    "build": {
      "dependsOn": ["^build", "build:css"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["build:css"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
